<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ebebeb">

    <com.hong.bo.shi.widget.CommonTitle
        android:id="@+id/commonTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height" />

    <RelativeLayout
        android:id="@+id/rl_edit_name_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/commonTitle"
        android:layout_marginTop="20dp"
        android:background="@color/color_ffffff"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@mipmap/icon_14_clean" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/ivClear"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/color_313131"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_edit_public_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/commonTitle"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_ffffff"
        android:padding="10dp">

        <EditText
            android:id="@+id/etPublic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:gravity="left|top"
            android:hint="请输入群公告"
            android:lineSpacingExtra="3dp"
            android:maxLength="200"
            android:textColor="@color/color_313131"
            android:textSize="16sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_public_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/commonTitle"
        android:background="@color/color_ffffff"
        android:minHeight="250dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvPublic"
            android:text="这个群还没有发布群公告"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/color_313131"
            android:textSize="16sp"
            android:gravity="left|top" />
    </FrameLayout>
</RelativeLayout>
