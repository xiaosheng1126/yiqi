<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/chat_item_style">

    <TextView
        style="@style/chat_time_style"
        tools:text="12:30"/>

    <com.hong.bo.shi.widget.fresco.ImageDraweeView
        style="@style/chat_photo_style_right"/>

    <TextView
        style="@style/chat_item_name_right"
        tools:text="张三" />

    <RelativeLayout
        android:id="@id/rlItem"
        android:layout_below="@id/tvName"
        android:layout_width="200dp"
        android:layout_alignRight="@id/tvName"
        android:background="@drawable/chat_send_item_sel"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAddress"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:textSize="16sp"
            android:textColor="@color/color_313131"
            android:lineSpacingExtra="2dp"
            android:maxLines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.hong.bo.shi.widget.fresco.ImageDraweeView
            android:id="@id/ivPic"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_below="@id/tvAddress"/>
    </RelativeLayout>
</RelativeLayout>
