<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/kicked_bg"
        android:padding="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/popup_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="该用户已从其他机器登录该账号,您被迫下线!"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_313131"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvAgainLogin"
            android:text="立即登录"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@id/popup_title_view"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_bg"
            android:textColor="@color/color_ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvLogin"
            android:text="重新登录"
            android:layout_below="@id/tvAgainLogin"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:textColor="@color/color_ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvExit"
            android:text="退出程序"
            android:layout_below="@id/tvLogin"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/btn_bg"
            android:textColor="@color/color_ffffff"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>
